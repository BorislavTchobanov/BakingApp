<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ingredient_list_item_margin_side"
    android:layout_marginTop="@dimen/ingredient_list_item_margin_top"
    android:layout_marginRight="@dimen/ingredient_list_item_margin_side"
    android:layout_marginBottom="@dimen/ingredient_list_item_margin_top"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ingredient_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/ingredient_list_item_margin_side"
        android:paddingEnd="@dimen/ingredient_list_item_margin_side"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />

</LinearLayout>